{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["prettier", "plugin:react/recommended"],
    "overrides": [
        {
            "files": ["*.mdx"],
            "extends": ["plugin:mdx/recommended"],
            "globals": {
                "Button": false,
                "Checkbox": false,
                "ClimateZoneSelect": false,
                "Collapsible": false,
                "DateInput": false,
                "DateStr": false,
                "DateTimeStr": false,
                "Figure": false,
                "FileInput": false,
                "GpsCoordStr": false,
                "LabelValue": false,
                "LocationStr": false,
                "NumberInput": false,
                "PDFRenderer": false,
                "PageBreak": false,
                "Photo": false,
                "PhotoInput": false,
                "PrintSection": false,
                "Radio": false,
                "Repeatable": false,
                "RepeatableInput": false,
                "Select": false,
                "ShowOrHide": false,
                "StringInput": false,
                "Tab": false,
                "Tabs": false,
                "TextInput": false,
                "USStateSelect": false,
                "Table": false
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": ["react", "react-hooks", "prettier", "typescript"],
    "rules": {
        "prettier/prettier": "error",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    },
    "settings": {
        "react": {
            "version": "18.2.0"
        }
    },
    "parser": "@babel/eslint-parser"
}
